# Entropy Server Configuration
# Rename this file to .env:
# cp .env.example .env

# Network Configuration
ENTROPY_PORT=8080
ENTROPY_ADDR=0.0.0.0
ENTROPY_ALLOWED_ORIGINS=http://localhost:5173,tauri://localhost

# Database
ENTROPY_REDIS_URL=tcp://127.0.0.1:6379

# Security Secrets (CHANGE THESE IN PRODUCTION)
# Use a long, cryptographically secure random string.
ENTROPY_SECRET_SALT=REPLACE_WITH_SECURE_SALT_FOR_BLINDING
ENTROPY_ADMIN_TOKEN=REPLACE_WITH_SECURE_ADMIN_TOKEN

# Connection Limits
ENTROPY_MAX_CONNS_PER_IP=100

# Rate Limits (Requests per window)
ENTROPY_RATE_LIMIT=500.0         # Global token bucket rate
ENTROPY_POW_LIMIT=20             # Max PoW challenges per minute

# Granular API Limits (Standard defaults)
ENTROPY_LIMIT_GLOBAL=600
ENTROPY_LIMIT_KEYS_UPLOAD=5
ENTROPY_LIMIT_KEYS_FETCH=20
ENTROPY_LIMIT_KEYS_RANDOM=10
ENTROPY_LIMIT_RELAY=30
ENTROPY_LIMIT_NICK_REGISTER=5
ENTROPY_LIMIT_NICK_LOOKUP=30
ENTROPY_LIMIT_ACCOUNT_BURN=3
